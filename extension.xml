	<properties>
		<name>ICRPG - Quickstart 2e</name>
		<version>1.0</version>
		<author>George Taray</author>
		<description>Adds rules changes from Quickstart 2e.</description>
		<ruleset>
			<name>ICRPG</name>
		</ruleset>
		<loadorder>50</loadorder>
