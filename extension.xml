		<includefile source="campaign/record_power.xml" />

		<!-- Strings -->
		<includefile source="strings/strings.xml" />

		<!-- Scripts -->
		<script name="Quickstart2e" file="scripts/quickstart2e.lua" />
	</base>
</root>